def div(*args):


    
	try:

		arg1 = int(input("первую циферку пожалуйста "))
    
		arg2 = int(input("Вторую пожалуйста"))
        
		res = arg1 / arg2
    
	except ValueError:
        
		return 'Value error'
    
	except ZeroDivisionError:
        
		return "ай яй яй в школе не учили, что на 0 делить нельзя?!"

    

	return res

    

